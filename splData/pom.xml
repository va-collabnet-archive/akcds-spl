<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.apelon.va.ihtsdo.wb.akcds</groupId>
		<artifactId>akcds</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<groupId>com.apelon.va.ihtsdo.wb.akcds</groupId>
	<artifactId>splData</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>splData</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<!-- spl dependencies -->

		<dependency>
			<groupId>com.apelon.air</groupId>
			<artifactId>apelonAir</artifactId>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/apelonAir.jar</systemPath>
			<version>1</version>
		</dependency>

		<!-- other dependencies -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-data</id>
						<configuration>
							<descriptors>
								<descriptor>resources/assembly/generated-artifact.xml</descriptor>
							</descriptors>
						</configuration>
						<goals>
							<goal>single</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.apelon.va.ihtsdo.wb.akcds</groupId>
				<artifactId>splMojo</artifactId>
				<version>1.0-SNAPSHOT</version>
				<executions>
					<execution>
						<id>genereate-jbin</id>
						<goals>
							<goal>generate-example-data</goal>
						</goals>
						<phase>generate-resources</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>

	</build>

</project>
