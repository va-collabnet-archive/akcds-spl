<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.apelon.va.ihtsdo.wb.akcds</groupId>
		<artifactId>akcds</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<groupId>com.apelon.va.ihtsdo.wb.akcds</groupId>
	<artifactId>splData</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>splData</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>
		<plugins>
		    <plugin>
		    	<groupId>org.apache.maven.plugins</groupId>
		    	<artifactId>maven-install-plugin</artifactId>
		    	<executions>
					<execution>
						<id>install-jbin-file</id>
						<phase>install</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<file>${project.build.directory}/splData.jbin</file>
							<generatePom>true</generatePom>
							<groupId>com.apelon.va.ihtsdo.wb.akcds</groupId>
							<artifactId>spl-data-test</artifactId>
							<packaging>jbin</packaging>
							<version>1</version>
						</configuration>
					</execution>
				</executions>
		    </plugin>
			<plugin>
				<groupId>com.apelon.va.ihtsdo.wb.akcds</groupId>
				<artifactId>splMojo</artifactId>
				<version>1.0-SNAPSHOT</version>
				<executions>
					<execution>
						<id>genereate-jbin</id>
						<goals>
							<goal>convert-spl-to-jbin</goal>
						</goals>
						<phase>generate-resources</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
